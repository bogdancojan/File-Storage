<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f5f3f7;
    overflow: hidden; /* Added overflow property to hide the scrollbar */
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80%; /* Updated width to 80% */
    margin: 0 auto; /* Added margin to center the container */
    height: 100%; /* Added height property to fill the available space */
    overflow-y: auto; /* Added overflow-y property to enable vertical scrolling */
  }

  h1 {
    color: #6a0572;
    text-align: center;
    font-size: 24px;
    margin-bottom: 20px;
  }

  table {
    width: 85%; /* Updated width to 85% */
    margin-top: 20px;
    border-collapse: collapse;
    background-color: #f9f7fb;
    box-shadow: 0 7px 15px rgba(0, 0, 0, 0.4); /* Updated box-shadow property to only show shadow at the bottom and right */
  }

  th, td {
    padding: 10px;
    text-align: center;
  }

  th {
    background-color: #a55bd7;
    color: #fff;
  }

  tr:nth-child(even) {
    background-color: #d4b1e3;
  }

  tr:nth-child(odd) {
    background-color: #b68dd0;
  }

  .button {
    display: inline-block;
    padding: 10px 20px;
    border-radius: 50px; /* Added border-radius to create a pill-like shape */
    background-color: #6a0572; /* Added background color */
    color: #fff; /* Added text color */
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .button:hover {
    background-color: #8c0b8e; /* Added hover background color */
    cursor: pointer;
  }

  #upload-button {
    align-self: flex-end; /* Added align-self property to align the button to the right */
    margin-right: 15%;
  }

  .alert {
    width: 85%; /* Updated width to 85% */
    padding: 10px;
    margin-top: 20px;
    border-radius: 5px;
    text-align: center;
  }

  .alert-notice {
    background-color: #d1ecf1;
    color: #0c5460;
  }

  .alert-alert {
    background-color: #f8d7da;
    color: #721c24;
  }
</style>

<div class="container">
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>">
      <%= message %>
    </div>
  <% end %>
  
  <h1>Your Documents</h1>

  <%= form_with url: upload_documents_path, local: true, html: { id: 'upload-button' } do |form| %>
    <%= form.file_field :file, onchange: 'document.getElementById("upload-button").submit();', class: 'button' %>
  <% end %>

  <% if @documents.empty? %>
    <p>No documents found.</p>
  <% else %>
    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Download</th>
          <th>Destroy</th>
        </tr>
      </thead>
      <tbody>
        <% @documents.each do |document| %>
          <tr>
            <td><%= document.id %></td>
            <td><%= document.name %></td>
            <td>
                <%= link_to 'Download', download_document_path(document), class: 'button' %>
            </td>
            <td>
              <%= button_to 'Delete', document_path(document), method: :delete, class: 'button', onclick: "return confirm('Are you sure?')" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
